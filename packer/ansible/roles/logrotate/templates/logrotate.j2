# {{ ansible_managed }}

{% for log in item.logs %}
{{ log }} {
  daily
  missingok
  rotate 7
  compress
  delaycompress
  notifempty
  create 0644 {{ item.user | default('www-data') }} {{ item.group | default('www-data') }}
  sharedscripts
  postrotate
    /bin/systemctl restart {{ item.name }} > /dev/null
  endscript
}
{% endfor %}