upstream nitter {
    server 127.0.0.1:{{ nitter_port }} max_fails=3 fail_timeout=60s;
}

server {
	listen 8080;

	server_name nitter;

	root {{ nitter_install_dir }}/;

	access_log /var/log/nginx/nitter.access.log;
	error_log /var/log/nginx/nitter.error.log crit;

    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript application/activity+json application/atom+xml;

	server_tokens off;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

	include {{ nginx_no_index_conf }};

    location / {
        proxy_pass http://nitter;
    }
}